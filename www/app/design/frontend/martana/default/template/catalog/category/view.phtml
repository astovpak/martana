              <article class="three-col-service post-110 service type-service status-publish has-post-thumbnail hentry">
                 <figure>
                       <a href="<?php echo $caturl ?>" title="<?php echo $catname?>">
                        <img width="848" height="518" src="<?php echo $catimg ?>" class="attachment-service-gallery-thumb wp-post-image" alt="service-3" />
                       </a>
                 </figure>
                 <div class="contents clearfix">
                        <h4><a href="<?php echo $caturl ?>"><?php echo $catname?></a></h4>
                            <div class="entry-content">
                              <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut&hellip;</p>
                            </div>
                            <a class="read-more" href="<?php echo $caturl ?>">Читать далее</a>
                 </div>
              </article>  
          </div>
          <?php if($count%2==0):?><div class="visible-sm clearfix"></div><?php endif; ?>
          <?php if($count%3==0):?><div class="visible-lg clearfix"></div><div class="visible-md clearfix"></div><?php endif; ?>
          <?php $count++; ?>
        <?php        endforeach; ?>  
       </div>
    </div>
</div>


