<?php
  $_category  = $this->getCurrentCategory();
  $children=explode(',',$_category->getChildren());
  $_helper    = $this->helper('catalog/output');
?>
<?php if ($this->getCurrentCategory()->getChildren()):?>

<div class="services-page clearfix">
    <div class="container">
       <div class="row "> 
        <?php $count=1;?>   
        <?php foreach ($children as $child):?>
          <?php
            $_cat = Mage::getModel('catalog/category')->load($child);
            if($_cat->getIsActive())
               {
                $caturl     = $_cat->getURL();
                $catname     = $_cat->getName();
            if($_cat->getImageUrl())
                {
                $catimg     = $_cat->getImageUrl();
                }
               }
          ?>
