/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>


<?php if($this->getCollection()->getSize()): ?>    
    <div class="catalog-pager screen">
    

         <?php //if($this->getShowAmounts()): ?>
        
            <span class="pager-results">
                <?php if($this->getLastPageNum()>1): ?>
                <?php echo $this->__('results %s - %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
                <?php else: ?>
                <?php echo $this->__('%s result(s)', $this->getTotalNum()) ?>
                <?php endif; ?>
            </span>   
         <?php //endif ?>
        
    
                  
       
        <?php if ($this->canShowFirst()): ?>
            <a class="pager-num" href="<?php echo $this->getFirstPageUrl() ?>">first</a>
        <?php endif;?>

        

        <?php foreach ($this->getFramePages() as $_page): ?>
            <?php if ($this->isPageCurrent($_page)): ?>
                <span><?php echo $_page ?></span>
            <?php else: ?>
                <a class="pager-num" href="<?php echo $this->getPageUrl($_page) ?>"><?php echo $_page ?></a>
            <?php endif;?>
        <?php endforeach;?>
                
        <?php if ($this->canShowPreviousJump()): ?>
            <span class="pager-dots"> <a title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a></span>
        <?php endif;?>

        <?php if ($this->canShowNextJump()): ?>
            <a class="pager-dots" title="" href="<?php echo $this->getNextJumpUrl() ?>">></a>
        <?php endif;?>
            
        

        <?php if ($this->canShowLast()): ?>
          <a class="pager-num" href="<?php echo $this->getLastPageUrl() ?>"><?php echo $this->getLastPageNum() ?></a>
        <?php endif;?>

         <?php if (!$this->isFirstPage()): ?>
            
                <a class="pager-prev" href="<?php echo $this->getPreviousPageUrl() ?>" title="<?php echo $this->__('Previous') ?>"><</a>
            
        <?php endif;?> 
          
        <?php if (!$this->isLastPage()): ?>
            
                <a class="pager-next" href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>">></a>
            
        <?php endif;?>
        

    </div>
            
 <?php endif ?>