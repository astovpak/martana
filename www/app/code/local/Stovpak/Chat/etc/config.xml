                    </chat>
                </entities>
            </chat_mysql4>
        </models>
        <resources>
            <chat_setup>
                <setup>
                    <module>Stovpak_Chat</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </chat_setup>
            <chat_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </chat_write>
            <chat_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </chat_read>
        </resources>
        <blocks>
            <chat>
                <class>Stovpak_Chat_Block</class>
            </chat>
        </blocks> 
        <helpers>
            <chat>
